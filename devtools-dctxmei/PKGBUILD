# Maintainer: Dictator Mei <dctxmei@gmail.com>
pkgname=devtools-dctxmei
pkgver=20180801
pkgrel=1
pkgdesc="Tools for Arch Linux Dictator Repository package maintainers"
arch=('any')
url="https://gitlab.com/dctxmei/devtools-dctxmei"
license=('GPL')
depends=('devtools')
makedepends=("cmake" "git")
source=("git+${url}.git")
sha512sums=('SKIP')

build() {
    cd $pkgname
    mkdir -p build
    cd build
    cmake .. -DCMAKE_INSTALL_PREFIX=/usr
    make
}

package() {
    cd $pkgname/build
    make DESTDIR="${pkgdir}" install
}
